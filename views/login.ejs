<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurum - Login</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/auth.css">
</head>

<body>
    <main class="container-etapa" style="max-width: 400px;">
        <h2>Login</h2>
        <p>Acesse sua conta</p>
        <div class="linha-progresso" style="display: none;"></div>

        <form id="form-login" class="form-etapa" style="grid-template-columns: 1fr;">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" placeholder="Digite seu e-mail" required>
            </div>

            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>
            </div>

            <div class="form-buttons" style="grid-template-columns: 1fr;">
                <button type="submit" class="btn-primario">Entrar</button>
                <a href="/" class="btn-cancelar">Voltar</a>
            </div>
        </form>
    </main>

    <script>
        document.getElementById('form-login').addEventListener('submit', function (e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const senha = document.getElementById('senha').value;

            if (email === 'abc@example.com' && senha === '123') {
                // Success - Redirect immediately
                window.location.href = '/dashboard';
            } else {
                alert('Credenciais inv√°lidas. Tente abc@example.com / 123');
            }
        });
    </script>
</body>

</html>